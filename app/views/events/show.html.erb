<div class="well sidebar-nav" style="float:right;">
  <ul class="nav nav-list">
    <li class="nav-header">参加者</li>

    <% @event.users.each do |attend| %>
      <li><%= attend.name %></li>
      <%= AttendUser.find_by(user_id: attend.id, event_id: @event.id).comment %>
